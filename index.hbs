{{!< default}}

<div class="post-feed">

    {{!-- REMOVED: Subscribe Box Section --}}

    {{#foreach posts}}
    <article class="post-card">
        <a href="{{url}}">
            <div class="card-terminal-bar">
                <div class="card-status-box"></div>
                <div class="card-scanlines"></div>
            </div>
    
            <div class="post-card-content">
                <h2 class="post-title">{{title}}</h2>

                <p class="post-meta">
                    >> {{date published_at format="YYYY-MM-DD HH:mm"}}
                    {{#if tags}}
                    <span style="opacity: 0.5; margin: 0 5px;">|</span>
                    {{tags prefix="[" separator="] [" suffix="]" limit="3"}}
                    {{/if}}
                </p>
            </div>
        </a>
    </article>
    {{/foreach}}

</div>

{{pagination}}